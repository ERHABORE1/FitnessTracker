@model FitnessTracker.Models.ProgressLog

@{
    ViewData["Title"] = "Edit Progress Entry";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">Edit Progress Entry</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProgressLogId" />

                        <div class="mb-3">
                            <label asp-for="EntryDate" class="form-label fw-semibold"></label>
                            <input asp-for="EntryDate"
                                   type="date"
                                   class="form-control" />
                            <span asp-validation-for="EntryDate"
                                  class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label fw-semibold"></label>
                            <input asp-for="Weight"
                                   type="number"
                                   step="0.1"
                                   class="form-control" />
                            <span asp-validation-for="Weight"
                                  class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BodyFatPercent" class="form-label fw-semibold"></label>
                            <input asp-for="BodyFatPercent"
                                   type="number"
                                   step="0.1"
                                   min="1"
                                   max="100"
                                   class="form-control" />
                            <span asp-validation-for="BodyFatPercent"
                                  class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-semibold"></label>
                            <textarea asp-for="Notes"
                                      rows="3"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Notes"
                                  class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-dark">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
