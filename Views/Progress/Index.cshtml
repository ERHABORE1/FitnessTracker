@model List<FitnessTracker.Models.ProgressLog>

@{
    ViewData["Title"] = "Your Progress";

    var chartDataJson = System.Text.Json.JsonSerializer.Serialize(
        Model.OrderBy(m => m.EntryDate).Select(m => new
        {
            date = m.EntryDate.ToString("yyyy-MM-dd"),
            weight = m.Weight,
            bodyFat = m.BodyFatPercent
        })
    );
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">Your Progress</h2>

    <div class="row g-4">
        <!-- LEFT: LOG FORM -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Log a new entry</h5>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Date</label>
                            <input type="date"
                                   name="EntryDate"
                                   class="form-control"
                                   value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Weight (lbs)</label>
                            <input type="number"
                                   step="0.1"
                                   min="1"
                                   name="Weight"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Body Fat % (optional)</label>
                            <input type="number"
                                   step="0.1"
                                   min="1"
                                   max="100"
                                   name="BodyFatPercent"
                                   class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Notes (optional)</label>
                            <textarea name="Notes"
                                      rows="3"
                                      class="form-control"></textarea>
                        </div>

                        <button type="submit" class="btn btn-dark w-100">
                            Save Progress
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT: CHART + HISTORY -->
        <div class="col-lg-8">

            <!-- Chart Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Progress Chart</h5>
                        <div class="btn-group">
                            <button type="button"
                                    class="btn btn-sm btn-outline-dark"
                                    id="btnWeight">
                                Weight
                            </button>
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary"
                                    id="btnBodyFat">
                                Body Fat %
                            </button>
                        </div>
                    </div>

                    <canvas id="progressChart" height="120"></canvas>

                    <small class="text-muted d-block mt-2">
                        Note: Body fat % only appears if you log it.
                    </small>
                </div>
            </div>

            <!-- History Table -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">History</h5>

                    @if (!Model.Any())
                    {
                        <p class="text-muted mb-0">No progress logged yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Weight (lbs)</th>
                                        <th>Body Fat %</th>
                                        <th>Notes</th>
                                        <th>Trainer Feedback</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(m => m.EntryDate))
                                    {
                                        <tr>
                                            <td>@item.EntryDate.ToString("yyyy-MM-dd")</td>
                                            <td>@item.Weight</td>
                                            <td>@(item.BodyFatPercent?.ToString("0.0") ?? "-")</td>
                                            <td>@item.Notes</td>
                                            <td>@item.TrainerFeedback</td>
                                            <td class="text-end">
                                                <a asp-action="Edit"
                                                   asp-route-id="@item.ProgressLogId"
                                                   class="btn btn-sm btn-outline-dark me-1">
                                                    Edit
                                                </a>

                                                <form asp-action="Delete"
                                                      asp-route-id="@item.ProgressLogId"
                                                      method="post"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Delete this entry?');">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const rawData = @Html.Raw(chartDataJson);

        const labels = rawData.map(p => p.date);
        const weightData = rawData.map(p => p.weight);
        const bodyFatData = rawData.map(p => p.bodyFat ?? null);

        const ctx = document.getElementById('progressChart').getContext('2d');

        let chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Weight (lbs)',
                    data: weightData,
                    tension: 0.3,
                    pointRadius: 4,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: { display: true, text: 'Date' }
                    },
                    y: {
                        title: { display: true, text: 'Weight (lbs)' },
                        beginAtZero: false
                    }
                }
            }
        });

        document.getElementById('btnWeight').addEventListener('click', () => {
            chart.data.datasets[0].label = 'Weight (lbs)';
            chart.data.datasets[0].data = weightData;
            chart.options.scales.y.title.text = 'Weight (lbs)';
            chart.update();
        });

        document.getElementById('btnBodyFat').addEventListener('click', () => {
            chart.data.datasets[0].label = 'Body Fat %';
            chart.data.datasets[0].data = bodyFatData;
            chart.options.scales.y.title.text = 'Body Fat %';
            chart.update();
        });
    </script>
}
