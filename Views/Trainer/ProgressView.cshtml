@model List<FitnessTracker.Models.ProgressLog>

@{
    ViewData["Title"] = "Client Progress";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">@ViewBag.ClientName's Progress ðŸ“ˆ</h2>

    <canvas id="progressChart" height="120"></canvas>

    <div class="table-responsive mt-4">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Weight (lbs)</th>
                    <th>Client Notes</th>
                    <th>Trainer Feedback</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.EntryDate.ToShortDateString()</td>
                        <td>@log.Weight</td>
                        <td>@log.Notes</td>
                        <td>@(string.IsNullOrWhiteSpace(log.TrainerFeedback) ? "â€”" : log.TrainerFeedback)</td>
                        <td class="text-end">
                            <button type="button"
                                    class="btn btn-sm btn-dark"
                                    onclick="openReply(@log.ProgressLogId, '@log.EntryDate.ToShortDateString()')">
                                Reply
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Reply box (hidden until a row is chosen) -->
    <div id="replyBox" class="card p-3 mt-3" style="display:none;">
        <h5 id="replyTitle" class="mb-2">Add Trainer Feedback</h5>

        <form method="post" action="/Trainer/AddTrainerFeedback">
            <input type="hidden" id="replyLogId" name="logId" />
            <textarea name="feedback"
                      class="form-control"
                      rows="3"
                      placeholder="Encouragement or advice for this specific entry"></textarea>
            <button class="btn btn-dark mt-2">Save Feedback</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const dates = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model.Select(l => l.EntryDate.ToShortDateString()).ToList()
        ));

        const weights = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model.Select(l => l.Weight).ToList()
        ));

        new Chart(document.getElementById("progressChart"), {
            type: "line",
            data: {
                labels: dates,
                datasets: [{
                    label: "Weight (lbs)",
                    data: weights,
                    borderWidth: 3,
                    tension: 0.3
                }]
            }
        });

        function openReply(logId, dateLabel) {
            document.getElementById("replyLogId").value = logId;
            document.getElementById("replyTitle").innerText =
                "Add Trainer Feedback for " + dateLabel;
            document.getElementById("replyBox").style.display = "block";
        }
    </script>
}
