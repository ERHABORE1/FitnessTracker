@model IEnumerable<FitnessTracker.Models.UserWorkoutTemplate>

@{
    ViewData["Title"] = "My Workout Templates";
}

<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">My Workout Templates</h1>

        <a asp-controller="Trainer"
           asp-action="CreateTemplate"
           class="btn btn-dark">
            + New Template
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <h5>No templates yet</h5>
            <p>Create a template so you can reuse it with multiple clients.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var t in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-1">@t.TemplateName</h5>
                            <p class="text-muted mb-3">Personal trainer template</p>

                            <a asp-controller="Trainer"
                               asp-action="Assign"
                               class="btn btn-outline-dark btn-sm">
                                Manage Clients
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
